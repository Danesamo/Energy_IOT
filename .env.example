# =============================================================================
# ENERGY IoT PIPELINE - Configuration
# =============================================================================
# Copy this file to .env and adjust values as needed
# =============================================================================

# -----------------------------------------------------------------------------
# PostgreSQL (Raw Data Storage)
# -----------------------------------------------------------------------------
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=energy_db
POSTGRES_USER=energy_user
POSTGRES_PASSWORD=energy_password

# -----------------------------------------------------------------------------
# ClickHouse (Analytics Storage)
# -----------------------------------------------------------------------------
CLICKHOUSE_HOST=clickhouse
CLICKHOUSE_PORT=8123
CLICKHOUSE_DB=energy_analytics
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=

# -----------------------------------------------------------------------------
# Apache Airflow
# -----------------------------------------------------------------------------
AIRFLOW_UID=50000
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=postgresql+psycopg2://airflow:airflow@postgres-airflow:5432/airflow
AIRFLOW__CORE__FERNET_KEY=your-fernet-key-here
AIRFLOW__WEBSERVER__SECRET_KEY=your-secret-key-here
AIRFLOW__CORE__LOAD_EXAMPLES=False

# -----------------------------------------------------------------------------
# Apache Superset
# -----------------------------------------------------------------------------
SUPERSET_SECRET_KEY=your-superset-secret-key
SUPERSET_ADMIN_USER=admin
SUPERSET_ADMIN_PASSWORD=admin

# -----------------------------------------------------------------------------
# Grafana
# -----------------------------------------------------------------------------
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=admin

# -----------------------------------------------------------------------------
# dbt
# -----------------------------------------------------------------------------
DBT_PROFILES_DIR=/app/dbt
DBT_PROJECT_DIR=/app/dbt

# -----------------------------------------------------------------------------
# Great Expectations
# -----------------------------------------------------------------------------
GE_HOME=/app/great_expectations

# -----------------------------------------------------------------------------
# Project Settings
# -----------------------------------------------------------------------------
PROJECT_NAME=energy-iot-pipeline
ENVIRONMENT=development
LOG_LEVEL=INFO
